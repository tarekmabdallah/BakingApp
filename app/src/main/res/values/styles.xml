<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="text_views_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_color_details_activity</item>
        <item name="android:layout_margin">@dimen/padding1</item>
        <item name="android:padding">@dimen/padding1</item>
    </style>

    <style name="title_style" parent="text_views_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:textColor">@color/text_color_main_activity</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_reviews_style" parent="text_views_style">
        <item name="android:textColor">@color/text_color_main_activity</item>
    </style>

    <style name="widget_title_style" parent="text_views_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/widget_text_color</item>
        <item name="android:background">@color/widget_background</item>
    </style>

    <style name="rating_text_views_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/rating_text_size</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textColor">@color/text_color_main_activity</item>
        <item name="android:layout_margin">@dimen/padding1</item>
        <item name="android:padding">@dimen/padding1</item>
    </style>

    <style name="rating_full_mark_text_views_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/rating_full_mark</item>
        <item name="android:textSize">@dimen/rating_full_mark_text_size</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textColor">@color/text_color_main_activity</item>
        <item name="android:layout_margin">@dimen/padding1</item>
        <item name="android:padding">@dimen/padding1</item>
    </style>


    <style name="labels_style" parent="text_views_style">
        <item name="android:textSize">@dimen/label_text_size</item>
    </style>

    <style name="icons_styles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="poster_land_style">
        <item name="android:layout_width">@dimen/poster_width_land</item>
        <item name="android:layout_height">@dimen/poster_height_land</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
